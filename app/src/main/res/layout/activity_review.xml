                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="@string/sender_name" />

                                        <TextView
                                            android:id="@+id/edt_address"
                                            android:textColor="@color/white"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:hint="Address" />

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_landmark"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="Land Mark" />


                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_phone"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="Sender Phone Number" />

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_instruction"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="Instruction to Associate" />



                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:visibility="gone">


                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="center|left">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Destination Address"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/title"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_des_name"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="Name" />

                                        <TextView
                                            android:id="@+id/edt_address_des"
                                            android:textColor="@color/white"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:hint="Address" />

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_landmark_des"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="@string/landmark" />
                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_phone_des"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:hint="Receiver Phone Number" />

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/edt_instruction_des"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="" />
                                        <!--android:hint="@string/instruction"-->
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>




                        </LinearLayout>
                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@color/review3"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="10dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/txt_service"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Expedited, $800 , In 8 hours"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/white"
                                    android:padding="10dp"
                                    android:id="@+id/txt_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Date" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



