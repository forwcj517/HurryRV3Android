<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout

        android:id="@+id/lin_expedited"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:background="@color/package_background"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:paddingTop="@dimen/dimen_5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:background="@mipmap/flight"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:lines="1"
                    android:id="@+id/txt_expedited_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$800"
                    android:textColor="@color/dark_gray"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/txt_expedited"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Expedited"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="11dp" />



                <TextView
                    android:id="@+id/txt_expedited_duration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="In 8 hours"
                    android:textColor="@color/dark_gray"
                    android:textSize="11dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <LinearLayout
        android:layout_margin="1dp"
        android:id="@+id/lin_express"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/package_background"
            card_view:cardBackgroundColor="@color/white"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:layout_marginLeft="@dimen/dimen_2dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:paddingTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:visibility="gone"
                    android:background="@mipmap/racing"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:lines="1"
                    android:id="@+id/txt_express_price"
                    android:text="$500"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/dark_gray"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_express"
                    android:layout_marginTop="10dp"
                    android:text="Express"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/txt_express_duration"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:lines="2"
                    android:textColor="@color/dark_gray"
                    android:text="In 16 hours"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="1dp"
        android:id="@+id/lin_economy"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginRight="@dimen/dimen_2dp"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/package_background"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp">


            <LinearLayout
                android:paddingTop="@dimen/dimen_5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/motorcycle"
                    android:layout_width="55dp"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txt_economy_price"
                    android:gravity="center"
                    android:textColor="@color/dark_gray"
                    android:text="$400"
                    android:textSize="18dp"
                    android:lines="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_economy"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Economy"
                    android:textAllCaps="true"
                    android:textSize="11dp"
                    android:textColor="@color/pink_accent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/txt_economy_duration"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:lines="2"
                    android:textColor="@color/dark_gray"
                    android:text="In 24 hours"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>






    </LinearLayout>

</LinearLayout>