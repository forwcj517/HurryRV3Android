<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/blue"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/teal_back" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10px"
                android:top="10dp"
                android:right="10px"
                android:bottom="10dp" />
            <solid android:color="#CABBBBBB"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/teal_back"
                android:endColor="@color/teal_back"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/teal_back" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10px"
                android:top="10dp"
                android:right="10px"
                android:bottom="10dp" />
            <solid android:color="#CABBBBBB"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/blue"
                android:endColor="@color/blue"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/teal" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10px"
                android:top="10dp"
                android:right="10px"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>
