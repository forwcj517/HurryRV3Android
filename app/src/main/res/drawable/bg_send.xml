<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <gradient
            android:startColor="@color/dark_gray"
            android:endColor="@color/dark_gray"
            android:angle="270" />
        <stroke
            android:width="0dp"
            android:color="@color/dark_gray" />
        <corners
            android:radius="30dp" />
        <padding
            android:left="10px"
            android:top="10px"
            android:right="10px"
            android:bottom="10px" />
        <solid android:color="#CABBBBBB"/>
    </shape>
</item>

<item android:state_focused="true" >
    <shape>
        <gradient
            android:startColor="@color/dark_gray"
            android:endColor="@color/dark_gray"
            android:angle="270" />
        <stroke
            android:width="0dp"
            android:color="@color/dark_gray" />
        <corners
            android:radius="30dp" />
        <padding
            android:left="10px"
            android:top="10px"
            android:right="10px"
            android:bottom="10px" />
        <solid android:color="#CABBBBBB"/>
    </shape>
</item>

<item>
    <shape>
        <gradient
            android:startColor="#CCCCCC"
            android:endColor="#CCCCCC"
            android:angle="270" />
        <stroke
            android:width="0dp"
            android:color="#CCCCCC" />
        <corners
            android:radius="30dp" />
        <padding
            android:left="10px"
            android:top="10px"
            android:right="10px"
            android:bottom="10px" />
    </shape>
</item>
</selector>

