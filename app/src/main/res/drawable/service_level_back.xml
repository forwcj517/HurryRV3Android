<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape>
        <gradient
            android:startColor="@color/teal"
            android:endColor="@color/teal"
            android:angle="270" />
        <stroke
            android:width="1px"
            android:color="@color/teal" />

        <corners
            android:radius="15dp" />
        <padding
            android:left="10px"
            android:top="10px"
            android:right="10px"
            android:bottom="10px" />
    </shape>
</item>
</selector>


